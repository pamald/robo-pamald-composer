{
    "type": "library",
    "name": "pamald/robo-pamald-composer",
    "description": "Robo task wrapper for utility classes from  pamald/pamald-composer",
    "keywords": [
        "robo",
        "robo-task",
        "pamald"
    ],
    "authors": [
        {
            "name": "Andor",
            "role": "Maintainer",
            "homepage": "https://github.com/Sweetchuck"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/pamald/robo-pamald-composer/graphs/contributors"
        }
    ],
    "homepage": "https://github.com/pamald/robo-pamald-composer",
    "support": {
        "source": "https://github.com/pamald/robo-pamald-composer",
        "issues": "https://github.com/pamald/robo-pamald-composer/issues"
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "sweetchuck/git-hooks": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "repositories": {
        "sweetchuck/git": {
            "type": "github",
            "url": "https://github.com/Sweetchuck/git.git"
        },
        "pamald/pamald": {
            "type": "github",
            "url": "https://github.com/pamald/pamald.git"
        },
        "pamald/pamald-composer": {
            "type": "github",
            "url": "https://github.com/pamald/pamald-composer.git"
        },
        "pamald/robo-pamald": {
            "type": "github",
            "url": "https://github.com/pamald/robo-pamald.git"
        }
    },
    "require": {
        "php": ">=8.3",
        "consolidation/robo": "^5.0",
        "pamald/pamald": "1.x-dev",
        "pamald/pamald-composer": "1.x-dev",
        "pamald/robo-pamald": "1.x-dev"
    },
    "require-dev": {
        "ext-json": "*",
        "nuvoleweb/robo-config": "^3.0",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.6",
        "sweetchuck/git-hooks": "2.x-dev",
        "sweetchuck/robo-git": "4.x-dev",
        "sweetchuck/robo-phpcs": "4.x-dev",
        "sweetchuck/robo-phpstan": "3.x-dev",
        "symfony/error-handler": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Pamald\\Robo\\PamaldComposer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pamald\\Robo\\PamaldComposer\\Tests\\": "tests/src/"
        }
    }
}
